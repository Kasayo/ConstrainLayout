<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/gd1"
        app:layout_constraintGuide_percent="0.2"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/gd2"
        app:layout_constraintGuide_percent="0.5"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/gd3"
        app:layout_constraintGuide_percent="0.7"/>

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:id="@+id/view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv1"
        app:layout_constraintRight_toLeftOf="@id/tv2"
        app:layout_constraintBottom_toTopOf="@id/gd1"/>



    <TextView
        android:id="@+id/tv1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="1"
        android:textSize="45dp"
        android:background="#ff0"
        app:layout_constraintBottom_toTopOf="@id/gd1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/view"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="2"
        android:textSize="45dp"
        android:background="#ff00"
        app:layout_constraintBottom_toTopOf="@id/gd1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/view"/>

    <TextView
        android:id="@+id/tv3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#2B2727"
        android:gravity="center"
        android:text="3"
        android:textColor="#FAFAF7"
        android:textSize="45dp"
        android:layout_marginRight="150dp"
        android:layout_marginLeft="100dp"
        app:layout_constraintBottom_toBottomOf="@id/gd2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view" />

    <TextView
        android:id="@+id/tv4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="4"
        android:textSize="45dp"
        android:background="#33CCDF"
        app:layout_constraintBottom_toTopOf="@id/gd3"
        app:layout_constraintRight_toLeftOf="@id/tv3"
        app:layout_constraintTop_toBottomOf="@id/gd2"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/tv5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="5"
        android:textSize="45dp"
        android:background="#8C0D0D"
        app:layout_constraintTop_toBottomOf="@id/gd2"
        app:layout_constraintBottom_toTopOf="@id/tv6"
        app:layout_constraintLeft_toRightOf="@id/tv4"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="60dp" />

    <TextView
        android:id="@+id/tv6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="6"
        android:textSize="45dp"
        android:background="#989393"
        app:layout_constraintTop_toBottomOf="@id/gd3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv4"
        app:layout_constraintRight_toRightOf="parent"
      />


</androidx.constraintlayout.widget.ConstraintLayout>